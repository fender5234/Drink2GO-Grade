root: true

parserOptions:
  ecmaVersion: 2018
  sourceType: "module"

env:
  es2017: true
  browser: true
  node: true

globals:
  Swiper: readonly
  nouislider: readonly
extends:
  "htmlacademy/vanilla"

rules:
  no-magic-numbers:
    - error
    -
      ignore:
        - -1
        - 0
        - 1
        - 10
        - 100
